<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.shape.Rectangle?>
<Pane xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="view.LoginMenuGraphics"
      stylesheets="@../CSS/SignUp.css"
      prefWidth="1280" prefHeight="720">
    <HBox fx:id="menuBox" alignment="CENTER" spacing="200">
        <GridPane visible="false" alignment="CENTER_LEFT" vgap="40" prefWidth="350" fx:id="enteringNewPassword">
            <Label GridPane.rowIndex="0" text="Please enter new password"/>
            <PasswordField GridPane.rowIndex="1" promptText="Password"/>
            <PasswordField GridPane.rowIndex="2" promptText="Confirm password"/>
            <TextField visible="false" GridPane.rowIndex="1" promptText="Password"/>
            <TextField visible="false" GridPane.rowIndex="2" promptText="Confirm password"/>
            <Text fill="red" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Text fill="red" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <CheckBox text="Show/Hide password" GridPane.rowIndex="3" GridPane.columnIndex="0" fx:id="showHideNewPassword"/>
            <Button GridPane.rowIndex="4" alignment="CENTER" text="Submit" prefWidth="200" onMouseClicked="#passwordChange"/>
            <Button GridPane.rowIndex="5" alignment="CENTER" text="Back" prefWidth="200" onMouseClicked="#backToForgetPassword"/>
        </GridPane>
        <GridPane visible="false" alignment="CENTER_LEFT" vgap="40" prefWidth="350" fx:id="forgetPassword">
            <Label GridPane.rowIndex="0" text="Enter your username"/>
            <TextField GridPane.rowIndex="1" promptText="Username"/>
            <Text fill="red" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Button GridPane.rowIndex="2" alignment="CENTER" text="Next" prefWidth="200" onMouseClicked="#enteringNewPassword"/>
            <Button GridPane.rowIndex="3" alignment="CENTER" text="Back" prefWidth="200" onMouseClicked="#backToLogin"/>
        </GridPane>
        <GridPane visible="false" alignment="CENTER_LEFT" vgap="40" hgap="10" prefWidth="350" prefHeight="650" fx:id="loginMenu">
            <TextField GridPane.rowIndex="1" promptText="Username"/>
            <Text fill="red" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <PasswordField GridPane.rowIndex="2" promptText="Password" />
            <TextField visible="false" GridPane.rowIndex="2" promptText="Password" />
            <CheckBox text="Show/Hide password" GridPane.rowIndex="3" GridPane.columnIndex="0" fx:id="showHideLogin"/>
            <Text GridPane.rowIndex="2" GridPane.columnIndex="1" />
            <VBox GridPane.rowIndex="3" alignment="CENTER" spacing="10">
                <HBox alignment="CENTER" spacing="10">
                    <ImageView/>
                    <Rectangle onMouseClicked="#resetLoginCaptcha"/>
                </HBox>
                <TextField promptText="captcha" prefWidth="120"/>
            </VBox>
            <CheckBox text="Stay logged in" GridPane.rowIndex="5" />
            <Button GridPane.rowIndex="6" alignment="CENTER" text="Login" prefWidth="200" onMouseClicked="#login"/>
            <Button GridPane.rowIndex="7" alignment="CENTER" text="Forgot my password" onMouseClicked="#forgotMyPassword" prefWidth="200"/>
            <Button GridPane.rowIndex="8" alignment="CENTER" text="Back" onMouseClicked="#loginBack" prefWidth="200"/>
            <Text visible="false" GridPane.rowIndex="0" GridPane.columnIndex="0" fx:id="loginError"/>
        </GridPane>
        <GridPane alignment="CENTER_LEFT" vgap="40" prefWidth="350">
            <Button GridPane.rowIndex="0" alignment="CENTER" text="Sign up"  fx:id="signUpButton" onMouseClicked="#signUpMenu" prefWidth="200"/>
            <Button GridPane.rowIndex="1" alignment="CENTER" text="Login" onMouseClicked="#loginMenu" prefWidth="200"/>
        </GridPane>
        <GridPane visible="false" alignment="CENTER_LEFT" vgap="20" prefWidth="350" fx:id="signUpMenu">
            <TextField GridPane.rowIndex="1" promptText="Username"/>
            <Text fill="red" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <PasswordField GridPane.rowIndex="2" promptText="Password"/>
            <PasswordField GridPane.rowIndex="3" promptText="Confirm password"/>
            <TextField visible="false" GridPane.rowIndex="2" promptText="Password"/>
            <TextField visible="false" GridPane.rowIndex="3" promptText="Confirm password"/>
            <Text GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Text fill="red" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            <CheckBox text="Show/Hide password" GridPane.rowIndex="4" GridPane.columnIndex="0" fx:id="showHideSignUp"/>
            <Button GridPane.rowIndex="5" alignment="CENTER" text="Random password" onMouseClicked="#randomPasswordButton" prefWidth="200" scaleX="0.7" scaleY="0.7"/>
            <TextField GridPane.rowIndex="6" promptText="Email"/>
            <Text fill="red" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
            <TextField GridPane.rowIndex="7" promptText="Nickname"/>
            <Text fill="red" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
            <CheckBox GridPane.rowIndex="8" text="Slogan" onMouseClicked="#sloganCheckbox" fx:id="sloganBox"/>
            <Button GridPane.rowIndex="9" alignment="CENTER" text="Next" onMouseClicked="#getInformation" prefWidth="200"/>
            <Button GridPane.rowIndex="10" alignment="CENTER" text="Back" onMouseClicked="#signUpBack" prefWidth="200"/>
            <Text visible="false" GridPane.rowIndex="0" GridPane.columnIndex="0" fx:id="signUpError"/>
        </GridPane>
        <GridPane visible="false" alignment="CENTER_LEFT" vgap="20" prefWidth="350" fx:id="recoveryQuestionMenu">
            <Label textFill="darkorange" GridPane.rowIndex="0" text="Security question"/>
            <TextField GridPane.rowIndex="2" promptText="Answer"/>
            <TextField GridPane.rowIndex="3" promptText="Confirm answer"/>
            <Text fill="red" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Text fill="red" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            <VBox GridPane.rowIndex="4" alignment="CENTER_LEFT" spacing="10">
                <HBox alignment="CENTER" spacing="10">
                    <ImageView/>
                    <Rectangle onMouseClicked="#resetSignupCaptcha"/>
                </HBox>
                <HBox alignment="CENTER" spacing="1">
                    <TextField promptText="captcha" prefWidth="120"/>
                    <Text fill="red"/>
                </HBox>
            </VBox>
            <Button GridPane.rowIndex="5" text="Sign up" onMouseClicked="#signUp"/>
        </GridPane>
    </HBox>

</Pane>
